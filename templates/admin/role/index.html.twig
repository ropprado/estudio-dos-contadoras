{% extends 'admin/base.html.twig' %}

{% block title %}Roles{% endblock %}

{% block body %}
    <h1>Roles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.code }}</td>
                <td>{{ role.description }}</td>
                <td>
                    <a href="{{ path('admin_role_show', {'id': role.id}) }}">Ver</a>
                    <a href="{{ path('admin_role_edit', {'id': role.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_role_new') }}">Agregar</a>
{% endblock %}
