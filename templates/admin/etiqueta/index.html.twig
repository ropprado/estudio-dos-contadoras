{% extends 'admin/base.html.twig' %}

{% block title %}Etiqueta index{% endblock %}

{% block body %}
    <h1>Etiquetas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for etiqueta in etiquetas %}
            <tr>
                <td>{{ etiqueta.id }}</td>
                <td>{{ etiqueta.nombre }}</td>
                <td>
                    <a href="{{ path('admin_etiqueta_show', {'id': etiqueta.id}) }}">Ver</a>
                    <a href="{{ path('admin_etiqueta_edit', {'id': etiqueta.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_etiqueta_new') }}">Agregar</a>
{% endblock %}
